<div class="row">
  <div class="col-md-12">
    <h2>
      {{#employeeUpdateFormValue employee ""}}{{/employeeUpdateFormValue}}
      
      {{#employeeUpdateFormValue employee "firstName"}}{{/employeeUpdateFormValue}}
      {{#employeeUpdateFormValue employee "lastName"}}{{/employeeUpdateFormValue}}
      - Employee
      {{#employeeUpdateFormValue employee "employeeNum"}}{{/employeeUpdateFormValue}}
    </h2>
    <hr />

    <form action="/employee/update" method="post">
      <fieldset>
        <legend>Personal Information</legend>
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <label for="firstName">First Name:</label>
              <input
                type="text"
                class="form-control"
                id="firstName"
                name="firstName"
                {{!-- value="{{employee.firstName}}" --}}
                value="{{#employeeUpdateFormValue employee "firstName"}}{{/employeeUpdateFormValue}}"
              />
            </div>
          </div>

          <div class="col-md-6">
            <div class="form-group">
              <label for="lastName">Last Name:</label>
              <input
                type="text"
                class="form-control"
                id="lastName"
                name="lastName"
                {{!-- value="{{employee.lastName}}" --}}
                value="{{#employeeUpdateFormValue employee "lastName"}}{{/employeeUpdateFormValue}}"
              />
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <label for="email">Email:</label>
              <input
                class="form-control"
                id="email"
                name="email"
                type="text"
                {{!-- value="{{employee.email}}" --}}
                value="{{#employeeUpdateFormValue employee "email"}}{{/employeeUpdateFormValue}}"
              />
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label for="SSN">Social Security Num:</label>
              <input
                class="form-control"
                id="SSN"
                name="SSN"
                type="text"
                {{!-- value="935-74-9919" --}}
                value="{{#employeeUpdateFormValue employee "SSN"}}{{/employeeUpdateFormValue}}"
                readonly
              />
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-3">
            <div class="form-group">
              <label for="addressStreet">Address (Street):</label>
              <input
                class="form-control"
                id="addressStreet"
                name="addressStreet"
                type="text"
                {{!-- value="{{employee.addressStreet}}" --}}
                value="{{#employeeUpdateFormValue employee "addressStreet"}}{{/employeeUpdateFormValue}}"
              />
            </div>
          </div>
          <div class="col-md-3">
            <label for="addressCity">Address (City):</label>
            <input
              class="form-control"
              id="addressCity"
              name="addressCity"
              type="text"
              {{!-- value="{{employee.addressCity}}" --}}
              value="{{#employeeUpdateFormValue employee "addressCity"}}{{/employeeUpdateFormValue}}"
            />
          </div>
          <div class="col-md-3">
            <div class="form-group">
              <label for="addressState">Address (State):</label>
              <input
                class="form-control"
                id="addressState"
                name="addressState"
                type="text"
                {{!-- value="{{employee.addressState}}" --}}
                value="{{#employeeUpdateFormValue employee "addressState"}}{{/employeeUpdateFormValue}}"
              />
            </div>
          </div>
          <div class="col-md-3">
            <div class="form-group">
              <label for="addressPostal">Address (Zip Code):</label>
              <input
                class="form-control"
                id="addressPostal"
                name="addressPostal"
                type="text"
                {{!-- value="{{employee.addressPostal}}" --}}
                value="{{#employeeUpdateFormValue employee "addressPostal"}}{{/employeeUpdateFormValue}}"
              />
            </div>
          </div>
        </div>
      </fieldset>

      <fieldset>
        <legend>Company Information</legend>
        <div class="row">
          <div class="col-md-3">
            <div class="form-group">
              <label for="isManager">Manager:</label>
              <input
                class="form-control"
                type="checkbox"
                id="isManager"
                name="isManager"
                {{!-- {{#if employee.isManager}}
                checked
                {{/if}} --}}

                {{#employeeIsManager employee}}{{/employeeIsManager}}
              />
            </div>
          </div>

          <div class="col-md-3">
            <div class="form-group">
              <label for="employeeManagerNum">Employee's Manager Number:</label>
              <input
                class="form-control"
                id="employeeManagerNum"
                name="employeeManagerNum"
                type="text"
                {{!-- value="{{employee.employeeManagerNum}}" --}}
                value="{{#employeeUpdateFormValue employee "employeeManagerNum"}}{{/employeeUpdateFormValue}}"
              />
            </div>
          </div>
          <div class="col-md-3">
            <div class="form-group">
              <label>Status:</label><br />
              <label class="checkbox-inline">
                <input
                  type="radio"
                  id="statusFT"
                  name="status"
                  value="Full Time"
                  {{!-- {{#equal employee.status "Full Time"}}
                  checked
                  {{/equal}} --}}

                  {{#employeeJobStatus employee "Full Time"}}{{/employeeJobStatus}}
                />
                Full Time
              </label>
              <label class="checkbox-inline">
                <input
                  type="radio"
                  id="statusPT"
                  name="status"
                  value="Part Time"
                  {{!-- {{#equal employee.status "Part Time"}}
                  checked
                  {{/equal}} --}}
{{#employeeJobStatus employee "Part Time"}}{{/employeeJobStatus}}
                />
                Part Time
              </label>
            </div>
          </div>
          <div class="col-md-3">
            <div class="form-group">
              <label for="department">Department</label>
              <select class="form-control" name="department" id="department">
                {{#each departments}}
                  {{!-- <option value="{{departmentId}}">{{departmentName}}</option> --}}
                  {{#departmentSelectOption this}}{{/departmentSelectOption}}
                {{/each}}
                {{!-- 
                <option value="1" {{#equal employee.department "1"}} selected {{/equal}}>Creative Services</option>
                <option value="2" {{#equal employee.department "2"}} selected {{/equal}}>Product Development</option>
                <option value="3" {{#equal employee.department "3"}} selected {{/equal}}>Marketing</option>
                <option value="4" {{#equal employee.department "4"}} selected {{/equal}}>Strategic Planning</option>
                <option value="5" {{#equal employee.department "5"}} selected {{/equal}}>Accounting</option>
                <option value="6" {{#equal employee.department "6"}} selected {{/equal}}>Human Resources</option>
                <option value="7" {{#equal employee.department "7"}} selected {{/equal}}>Quality Analysis</option>
                --}}
              </select> 
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <label for="hireDate">Hire Date</label>
              <input
                class="form-control"
                id="hireDate"
                name="hireDate"
                type="text"
                {{!-- value="{{employee.hireDate}}" --}}
                value="{{#employeeUpdateFormValue employee 'hireDate'}}{{/employeeUpdateFormValue}}"
                readonly
              />
            </div>
          </div>
        </div>

      </fieldset>
    <input type="hidden" value="{{#employeeUpdateFormValue employee 'employeeNum'}}{{/employeeUpdateFormValue}}" name="employeeNum">
      <hr />
      <input
        type="submit"
        class="btn btn-primary pull-right"
        value="Update Employee"
      />
      <br /><br /><br />
    </form>
  </div>
</div>