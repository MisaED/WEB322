<div class="row">
  <div class="cold-md-12">
    <h2>Departments<a href="/departments/add" class="btn btn-success pull-right">Add New Department</a></h2>
    <hr />
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Department Number</th>
            <th>Department Name</th>
          </tr>
        </thead>
        <tbody>
          {{#each data}}
            {{#departmentTableRow this}}
            {{/departmentTableRow}}
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>